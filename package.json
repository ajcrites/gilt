{
  "name": "gilt",
  "version": "0.0.2",
  "description": "Interactive command line UI for git",
  "author": "Andrew Crites <acjrites@gmail.com> (https://github.com/ajcrites/gilt)",
  "license": "MIT",
  "main": "lib",
  "bin": "lib/index.js",
  "types": "lib",
  "scripts": {
    "prepublishOnly": "rm -rf lib && tsc && chmod +x lib/index.js",
    "precommit": "lint-staged",
    "test": "tsc --project tsconfig.test.json && tslint --project tsconfig.test.json && jest --coverage"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write --parser typescript --single-quote --trailing-comma all",
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "blessed": "^0.1.81"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.10",
    "@types/jest": "^22.2.2",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "ts-config-mobiquity-server": "^0.0.17",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  },
  "repository": "github:ajcrites/gilt",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!src/index.ts",
      "!lib/**"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "/__tests__/.+\\.test\\.ts$"
  }
}
