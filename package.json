{
  "name": "gilt",
  "version": "0.0.0",
  "description": "Interactive command line UI for git",
  "author": "Andrew Crites <acjrites@gmail.com> (https://github.com/ajcrites/gilt)",
  "license": "SEE LICENSE IN LICENSE",
  "main": "lib",
  "bin": "lib/index.js",
  "types": "lib",
  "scripts": {
    "prepublish": "rm -rf lib && tsc && chmod +x lib/index.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write --parser typescript --single-quote --trailing-comma all",
      "tslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "blessed": "^0.1.81"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.8",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.0",
    "prettier": "^1.10.2",
    "tsc-watch": "^1.0.15",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.2"
  },
  "repository": "github:ajcrites/gilt"
}
