{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["dom", "es7"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
